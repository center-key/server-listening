{
   "name": "server-listening",
   "version": "0.3.2",
   "description": "Simple promise to wait for server ready inside a mocha specification (written in TypeScript)",
   "license": "MIT",
   "type": "module",
   "module": "dist/server-listening.js",
   "main": "dist/server-listening.umd.cjs",
   "types": "dist/server-listening.d.ts",
   "files": [
      "dist"
   ],
   "exports": {
      ".": {
         "import": "./dist/server-listening.js",
         "require": "./dist/server-listening.umd.cjs"
      },
      "./": "./dist/"
   },
   "repository": "github:center-key/server-listening",
   "homepage": "https://github.com/center-key/server-listening",
   "bugs": "https://github.com/center-key/server-listening/issues",
   "docs": "https://github.com/center-key/server-listening#readme",
   "author": "Center Key (https://centerkey.com)",
   "keywords": [
      "javascript",
      "mocha",
      "promise",
      "ready",
      "server",
      "server-listening",
      "specification",
      "typescript",
      "wait"
   ],
   "jshintConfig": {
      "esversion": 9,
      "strict": "implied",
      "eqeqeq": true,
      "latedef": true,
      "nonbsp": true,
      "singleGroups": true,
      "undef": true,
      "unused": true,
      "mocha": true,
      "node": true
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "scripts": {
      "step:01": "rimraf build dist **/.DS_Store",
      "step:02": "jshint . --exclude node_modules,hello-world/node_modules,build,dist",
      "step:03": "eslint --max-warnings 0 . --ext .ts",
      "step:04": "tsc",
      "step:05": "tsc --module UMD --outDir build/umd",
      "step:06": "cpy build/umd/server-listening.js build --rename=server-listening.umd.cjs",
      "step:07": "add-dist-header build dist",
      "step:08": "w3c-html-validator",
      "pretest": "npm-run-all step:*",
      "test": "mocha spec/*.spec.js"
   },
   "dependencies": {
      "cheerio": "~1.0.0-rc.10",
      "express": "~4.17",
      "http-terminator": "~3.0",
      "jsdom": "~18.0"
   },
   "devDependencies": {
      "@types/cheerio": "~0.22",
      "@types/express": "~4.17",
      "@types/jsdom": "~16.2",
      "@types/node": "~16.10",
      "@typescript-eslint/eslint-plugin": "^5.0",
      "@typescript-eslint/parser": "^5.0",
      "add-dist-header": "~0.1",
      "assert-deep-strict-equal": "~0.0",
      "cpy-cli": "~3.1",
      "eslint": "~8.0",
      "fetch-json": "~2.6",
      "jshint": "~2.13",
      "mocha": "~9.1",
      "node-fetch": "~3.0",
      "npm-run-all2": "~5.0",
      "rimraf": "~3.0",
      "typescript": "~4.4",
      "w3c-html-validator": "~0.8"
   }
}
