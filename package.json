{
   "name": "server-listening",
   "version": "0.3.5",
   "description": "Simple promise to wait for server ready inside a mocha specification (written in TypeScript)",
   "license": "MIT",
   "type": "module",
   "module": "dist/server-listening.js",
   "main": "dist/server-listening.umd.cjs",
   "types": "dist/server-listening.d.ts",
   "files": [
      "dist"
   ],
   "exports": {
      ".": {
         "import": "./dist/server-listening.js",
         "require": "./dist/server-listening.umd.cjs"
      },
      "./": "./dist/"
   },
   "repository": "github:center-key/server-listening",
   "homepage": "https://github.com/center-key/server-listening",
   "bugs": "https://github.com/center-key/server-listening/issues",
   "docs": "https://github.com/center-key/server-listening#readme",
   "author": "Center Key (https://centerkey.com)",
   "keywords": [
      "javascript",
      "mocha",
      "promise",
      "ready",
      "server",
      "server-listening",
      "specification",
      "typescript",
      "wait"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "latedef": true,
      "nonbsp": true,
      "singleGroups": true,
      "undef": true,
      "unused": true,
      "mocha": true,
      "node": true
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "scripts": {
      "step:01": "rimraf build dist **/.DS_Store",
      "step:02": "jshint . --exclude-path .gitignore",
      "step:03": "eslint --max-warnings 0 . --ext .ts",
      "step:10": "tsc",
      "step:11": "tsc --module UMD --outDir build/umd",
      "step:12": "copy-file build/umd/server-listening.js build/server-listening.umd.cjs",
      "step:20": "add-dist-header build dist",
      "step:30": "html-validator",
      "pretest": "npm-run-all step:*",
      "test": "mocha spec/*.spec.js --retries 1"
   },
   "dependencies": {
      "cheerio": "~1.0.0-rc.12",
      "express": "~4.18",
      "http-terminator": "~3.2",
      "jsdom": "~20.0"
   },
   "devDependencies": {
      "@types/cheerio": "~0.22",
      "@types/express": "~4.17",
      "@types/jsdom": "~20.0",
      "@types/node": "~18.11",
      "@typescript-eslint/eslint-plugin": "~5.40",
      "@typescript-eslint/parser": "~5.40",
      "add-dist-header": "~0.3",
      "assert-deep-strict-equal": "~1.0",
      "copy-file-util": "~0.1",
      "copy-folder-util": "~0.2",
      "eslint": "~8.25",
      "fetch-json": "~2.7",
      "jshint": "~2.13",
      "mocha": "~10.1",
      "node-fetch": "~3.2",
      "npm-run-all2": "~6.0",
      "rimraf": "~3.0",
      "typescript": "~4.8",
      "w3c-html-validator": "~1.2"
   }
}
