{
   "name": "server-listening",
   "version": "1.0.0",
   "description": "Simple promise to wait for server ready inside a mocha specification (written in TypeScript)",
   "license": "MIT",
   "type": "module",
   "module": "dist/server-listening.js",
   "main": "dist/server-listening.umd.cjs",
   "types": "dist/server-listening.d.ts",
   "files": [
      "dist"
   ],
   "exports": {
      ".": {
         "import": "./dist/server-listening.js",
         "require": "./dist/server-listening.umd.cjs"
      },
      "./": "./dist/"
   },
   "repository": "github:center-key/server-listening",
   "homepage": "https://github.com/center-key/server-listening",
   "bugs": "https://github.com/center-key/server-listening/issues",
   "docs": "https://github.com/center-key/server-listening#readme",
   "author": "Center Key (https://centerkey.com)",
   "keywords": [
      "javascript",
      "mocha",
      "promise",
      "ready",
      "server",
      "server-listening",
      "specification",
      "typescript",
      "wait"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "latedef": true,
      "nonbsp": true,
      "singleGroups": true,
      "undef": true,
      "unused": true,
      "mocha": true,
      "node": true
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "runScriptsConfig": {
      "build": [
         "rimraf build dist **/.DS_Store",
         "jshint . --exclude-path .gitignore",
         "eslint --max-warnings 0 . --ext .ts",
         "tsc",
         "tsc --module UMD --outDir build/umd",
         "copy-file build/umd/server-listening.js build/server-listening.umd.cjs",
         "add-dist-header build dist",
         "html-validator"
      ]
   },
   "scripts": {
      "pretest": "run-scripts build",
      "test": "mocha spec/*.spec.js --timeout 5000 --retries 1"
   },
   "dependencies": {
      "cheerio": "~1.0.0-rc.12",
      "express": "~4.18",
      "http-terminator": "~3.2",
      "jsdom": "~21.1"
   },
   "devDependencies": {
      "@types/cheerio": "~0.22",
      "@types/express": "~4.17",
      "@types/jsdom": "~20.0",
      "@types/node": "~18.11",
      "@typescript-eslint/eslint-plugin": "~5.50",
      "@typescript-eslint/parser": "~5.50",
      "add-dist-header": "~0.3",
      "assert-deep-strict-equal": "~1.0",
      "copy-file-util": "~0.1",
      "copy-folder-util": "~0.2",
      "eslint": "~8.33",
      "fetch-json": "~3.0",
      "jshint": "~2.13",
      "mocha": "~10.2",
      "rimraf": "3",
      "run-scripts-util": "~0.1",
      "typescript": "~4.9",
      "w3c-html-validator": "~1.3"
   }
}
